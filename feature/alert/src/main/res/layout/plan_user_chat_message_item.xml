<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="message"
                type="com.prevent.feature.alert.MessageType.UserMessage" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/message_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primaryColor"
                app:cardCornerRadius="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/message_body_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primaryColor"
                    android:padding="12dp"
                    android:text="@{message.message}"
                    android:textColor="@color/primaryTextColor"
                    tools:text="メッセージメッセージメッセージメッセージ" />

        </com.google.android.material.card.MaterialCardView>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@{message.sendDate}"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/message_body"
                app:layout_constraintEnd_toStartOf="@id/message_body"
                tools:text="20:34" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>